resource_name = "param_container"
script/source = "@tool
extends HBoxContainer

@onready var param_name_line_edit: LineEdit = %ParamName
@onready var param_type_option_button: OptionButton = %ParamType

var signal_name:String
var param_name:String
var param_type:int

func _ready():
	param_name_line_edit.text = param_name
	param_type_option_button.select(param_type)

func _on_param_name_text_submitted(new_text):
	SignalBus.set_signal_parameter_name(signal_name,param_name,new_text)
	
func _on_param_type_item_selected(index):
	SignalBus.set_signal_parameter_type(signal_name,param_name,index)

func _on_remove_param_button_pressed():
	SignalBus.remove_signal_parameter(signal_name,param_name)
"

